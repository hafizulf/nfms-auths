generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  id          String    @id @default(uuid())
  user_id     String    @db.VarChar(100)
  token       String    @unique
  is_revoked  Boolean   @default(false)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  @@unique([user_id])
  @@map("tokens")
}

enum TokenPurpose {
  REGISTER
  FORGOT_PASSWORD
}

model OneTimeToken {
  id          String      @id @default(uuid())
  user_id     String
  purpose     TokenPurpose
  token_hash  Bytes
  expires_at  DateTime
  used_at     DateTime?
  created_at  DateTime    @default(now())

  @@unique([purpose, token_hash])
  @@index([user_id, purpose, expires_at])
  @@map("one_time_tokens")
}
